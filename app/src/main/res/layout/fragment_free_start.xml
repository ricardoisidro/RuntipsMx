<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background02"
    android:padding="16dp"
    tools:context=".fragments.FreeStartFragment">

    <ImageView
        android:id="@+id/imgFreeStart01"
        android:layout_width="307dp"
        android:layout_height="166dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/txtFreeStartWelcome"
        android:layout_marginTop="30dp"
        android:src="@drawable/runtipslogo" />

    <TextView
        android:id="@+id/txtFreeStartWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="@string/txtStartFreeWelcome"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Material.Medium" />

    <Button
        android:id="@+id/buttonFreeRun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="152dp"
        android:text="@string/btnFreeRun" />

</RelativeLayout>